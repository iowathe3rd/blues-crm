// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  //Системная информация
  id           String              @id @default(uuid())
  createdAt    DateTime            @default(now())
  //ФИО
  firstName    String
  lastName     String
  surName      String
  passwordHash String
  //Прочее
  email        String              @unique
  phoneNumber  String?             @unique
  workPlace    String?
  courses      ListenersOnCourse[]
  role         Roles               @default(USER)
}

model Course {
  //Системная информация
  id              String              @id @default(uuid())
  assignedAt      DateTime            @default(now())
  //Название, длительность, баллы, автор и слушатели
  title           String
  hoursCount      Int
  authorFirstName String
  authorLastName  String
  authorSurName   String
  listeners       ListenersOnCourse[]
  minimumScore    Int
}

model ListenersOnCourse {
  id                   String   @id @default(uuid())
  course               Course   @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  courseId             String
  listener             User     @relation(fields: [listenerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  listenerId           String
  certificateAvailable Boolean
  assignedAt           DateTime @default(now())
  score                Int
  paymentInfo          String
  finished             DateTime
  duration             String
}

enum Roles {
  USER
  ADMIN
  SUPER_ADMIN
}
